{
  "name": "vuex-crud",
  "version": "0.1.3",
  "description": "A library for Vuex to build CRUD modules easily",
  "main": "lib/index.js",
  "repository": "https://github.com/JiriChara/vuex-crud",
  "author": "Jiri Chara <jiri@chara.vip>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:commonjs",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "clean": "rimraf lib coverage esdoc",
    "doc": "mkdirp esdoc && esdoc -c esdoc.json",
    "lint": "eslint src test examples",
    "report": "npm run test && nyc report --reporter=lcov && codecov",
    "test:unit": "nyc ava",
    "test:e2e": "node test/e2e/runner.js",
    "test": "npm run lint && npm run test:unit &&  npm run test:e2e",
    "prepublish": "npm run clean && npm run report && npm run build && npm run doc"
  },
  "files": [
    "src",
    "lib"
  ],
  "devDependencies": {
    "ava": "^0.21.0",
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bavaria-ipsum": "^1.0.3",
    "body-parser": "^1.17.2",
    "chromedriver": "^2.30.1",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.1",
    "cross-spawn": "^5.1.0",
    "esdoc": "^0.5.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-html": "^3.1.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "express": "^4.15.3",
    "growl": "^1.10.2",
    "mkdirp": "^0.5.1",
    "nightwatch": "^0.9.16",
    "nightwatch-helpers": "^1.2.0",
    "nyc": "^11.0.3",
    "phantomjs-prebuilt": "^2.1.14",
    "rimraf": "^2.6.1",
    "selenium-server": "^2.53.1",
    "sinon": "^2.3.8",
    "vue": "^2.4.1",
    "vue-loader": "^12.2.2",
    "vue-router": "^2.7.0",
    "vue-template-compiler": "^2.4.1",
    "vuex": "^2.3.1",
    "vuex-router-sync": "^4.2.0",
    "webpack": "^3.3.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "peerDependencies": {
    "axios": "^0.16",
    "vue": "2.x"
  },
  "ava": {
    "files": [
      "test/unit/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": false,
    "powerAssert": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  }
}
